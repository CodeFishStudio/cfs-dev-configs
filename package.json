{
    "name": "cfs-dev-configs",
    "version": "0.0.5",
    "description": "Shared configurations for dev tools across CodeFish Studio projects.",
    "type": "module",
    "main": "index.js",
    "exports": {
        ".": "./index.js"
    },
    "bin": {
        "cfs-dev-setup": "./scripts/setup.js"
    },
    "scripts": {
        "release:major": "pnpm version major && git push && git push --tags",
        "release:minor": "pnpm version minor && git push && git push --tags",
        "release:patch": "pnpm version patch && git push && git push --tags",
        "version": "node scripts/update-readme-version.js && git add .",
        "format": "prettier . --write"
    },
    "devDependencies": {
        "prettier": "^3.6.2"
    },
    "peerDependencies": {
        "@eslint/compat": ">= 1",
        "@eslint/js": ">= 9",
        "eslint": ">= 9",
        "eslint-config-prettier": ">= 10",
        "eslint-import-resolver-typescript": ">= 4.4",
        "eslint-plugin-import": ">= 2.32",
        "eslint-plugin-react": ">= 7.37",
        "eslint-plugin-react-hooks": "6.0.0-rc.1",
        "eslint-plugin-react-native": ">= 5",
        "globals": ">= 16.3",
        "typescript-eslint": ">= 8"
    },
    "peerDependenciesMeta": {
        "@eslint/compat": {
            "optional": true
        },
        "eslint-plugin-react-native": {
            "optional": true
        }
    }
}
