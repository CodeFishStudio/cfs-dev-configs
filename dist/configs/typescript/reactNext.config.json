{
    "extends": ["cfs-dev-configs/tsconfig.base", "cfs-dev-configs/tsconfig.reactWeb"],

    /* --------------------------------------------------------
     * FROM THE `create next-app` TOOL
     * -------------------------------------------------------- */
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
